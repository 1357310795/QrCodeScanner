<Window x:Class="QRCodeMagic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:QRCodeMagic"
        Title="MainWindow"
        Width="1000" Height="600"
        ui:WindowHelper.UseModernWindowStyle="True"
        ui:WindowHelper.SystemBackdropType="None"
        ui:TitleBar.ExtendViewIntoTitleBar="False"
        ui:WindowHelper.UseAcrylicBackdrop="False"
        Loaded="Window_Loaded"
        mc:Ignorable="d">
    <Grid>
        <TextBlock x:Name="LoadingText" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Text="Loading" />
        <Frame x:Name="MainContent" />
    </Grid>
</Window>
