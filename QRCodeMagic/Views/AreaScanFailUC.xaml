<UserControl x:Class="QRCodeMagic.Views.AreaScanFailUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QRCodeMagic.Views" 
             d:DesignHeight="300" Foreground="White"
             d:DesignWidth="300" Background="{x:Null}"
             mc:Ignorable="d">
    <Grid>
        <Border Background="Coral" Opacity="0.4"/>
        <Border BorderBrush="Coral" BorderThickness="5"/>
        <StackPanel Orientation="Vertical" Margin="5" VerticalAlignment="Center" Background="Coral">
            <TextBlock Text="CloseOutline" Height="32" Width="32"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,4" />
            <TextBlock Margin="0,2,0,6" TextWrapping="Wrap" HorizontalAlignment="Center">
                <Run Text="{DynamicResource ScanFail}"/>
                <Run Text="{Binding Result}"/>
            </TextBlock>
            
        </StackPanel>
        <Button Padding="2" Command="{Binding CloseCommand}" Background="Coral"  Height="Auto" Width="Auto" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4">
            <TextBlock Margin="0" Text="Close" Foreground="White" Width="20" Height="20"/>
        </Button>
    </Grid>
</UserControl>
